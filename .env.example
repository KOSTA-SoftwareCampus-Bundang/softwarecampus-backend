# ==============================================================================
# 환경 설정 예시 파일
# ==============================================================================
# 이 파일을 복사하여 .env 파일을 생성하고 실제 값으로 변경하세요.
# .env 파일은 Git에 포함되지 않으므로 보안 정보를 안전하게 관리할 수 있습니다.
#
# 사용법:
# 1. 이 파일을 .env로 복사: cp .env.example .env
# 2. .env 파일의 값을 실제 환경에 맞게 수정
# 3. Git에 .env 파일이 추가되지 않도록 .gitignore 확인
# ==============================================================================

# ------------------------------------------------------------------------------
# 서버 설정
# ------------------------------------------------------------------------------
PORT_NO=
FRONTEND_PORT=

# ------------------------------------------------------------------------------
# 데이터베이스 설정
# ------------------------------------------------------------------------------
DATABASE_TYPE=
DB_DRIVER=
DB_URL=
DB_NAME=
DB_USER=
DB_PASSWORD=
DB_CHARACTER_ENCODING=
DB_MYSQL_COLLATION_SERVER=
DB_MYSQL_INIT_CONNECT=
TZ=

# SSL/TLS 설정 (2025-12-01 추가)
# 로컬 개발: useSSL=false (자체 서명 인증서 문제 회피)
# 운영 환경: useSSL=true (기본값, TLS 암호화 필수)
DB_USE_SSL=

# JPA 설정
JPA_DDL_AUTO=
JPA_SHOW_SQL=
JPA_DIALECT=
JPA_OPEN_IN_VIEW=

# 로그 레벨 설정
LOG_LEVEL_ROOT=
LOG_LEVEL_SQL=
LOG_LEVEL_TX=
LOG_LEVEL_INTERCEPTOR=

# ------------------------------------------------------------------------------
# AWS S3 설정
# ------------------------------------------------------------------------------
# DefaultCredentialsProvider 사용:
# - 로컬: 환경변수 또는 ~/.aws/credentials
# - AWS 배포: IAM Role 사용 (환경변수 불필요)
AWS_REGION=
AWS_S3_BUCKET_NAME=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# ------------------------------------------------------------------------------
# 파일 업로드 설정
# ------------------------------------------------------------------------------
# 프로필 이미지
FILE_UPLOAD_PROFILE_EXTENSIONS=
FILE_UPLOAD_PROFILE_CONTENT_TYPES=
FILE_UPLOAD_PROFILE_MAX_SIZE=

# 게시판 첨부파일
FILE_UPLOAD_BOARD_ATTACH_EXTENSIONS=
FILE_UPLOAD_BOARD_ATTACH_CONTENT_TYPES=
FILE_UPLOAD_BOARD_ATTACH_MAX_SIZE=

# 과정 이미지
FILE_UPLOAD_COURSE_IMAGE_EXTENSIONS=
FILE_UPLOAD_COURSE_IMAGE_CONTENT_TYPES=
FILE_UPLOAD_COURSE_IMAGE_MAX_SIZE=

# 기관 등록 첨부파일
FILE_UPLOAD_ACADEMY_FILE_EXTENSIONS=
FILE_UPLOAD_ACADEMY_FILE_CONTENT_TYPES=
FILE_UPLOAD_ACADEMY_FILE_MAX_SIZE=

# ------------------------------------------------------------------------------
# ProblemDetail API 설정
# ------------------------------------------------------------------------------
PROBLEM_BASE_URI=

# ------------------------------------------------------------------------------
# 백엔드 배포 관련 설정
# ------------------------------------------------------------------------------
# Nginx 설정에 적용할 도메인 주소
DOMAIN_NAME=
# 인증서에 박히는 배포 담당자 이메일주소
CERT_EMAIL=

# ------------------------------------------------------------------------------
# Redis 설정
# Nginx 설정에 적용할 도메인 주소
DOMAIN_NAME=
# 인증서에 박히는 배포 담당자 이메일주소
CERT_EMAIL=

# ------------------------------------------------------------------------------
# Redis 설정
# ------------------------------------------------------------------------------
REDIS_HOST=
REDIS_PORT=

# Redis 비밀번호 (2025-12-01 추가)
# 로컬 개발: 비밀번호 없음 (비워두기)
# 운영 환경: 반드시 강력한 비밀번호 설정 (필수)
# 예시: REDIS_PASSWORD=your-strong-redis-password
REDIS_PASSWORD=

# ------------------------------------------------------------------------------
# JWT 설정
# ------------------------------------------------------------------------------
JWT_SECRET=
JWT_EXPIRATION=

# ------------------------------------------------------------------------------
# CORS 설정
# ------------------------------------------------------------------------------
ALLOWED_ORIGINS=

# ------------------------------------------------------------------------------
# SMTP Email 설정
# ------------------------------------------------------------------------------
MAIL_USERNAME=
MAIL_APP_PASSWORD=

# ------------------------------------------------------------------------------
# ADMIN 계정 설정
# ------------------------------------------------------------------------------
ADMIN_EMAIL=
ADMIN_PASSWORD=
ADMIN_NAME=
ADMIN_PHONE=

# Soft Delete된 ADMIN 계정 자동 복구 허용 여부 (2025-12-01 추가)
# false (기본값): 복구하지 않음, 경고 로그만 출력
# true: 자동으로 복구 (비밀번호 및 정보 업데이트)
# 보안: 운영 환경에서는 false 권장, 수동 복구 후 true로 일시 변경
ADMIN_ALLOW_RESTORE=

# ------------------------------------------------------------------------------
# Rate Limiting 설정
# ------------------------------------------------------------------------------
# 전역 요청 제한 (IP당 분당 요청 수)
RATE_LIMIT_GLOBAL=

# 로그인 요청 제한 (IP당 분당 요청 수)
RATE_LIMIT_LOGIN=

# 비밀번호 검증 요청 제한 (IP당 분당 요청 수)
RATE_LIMIT_PASSWORD_VERIFICATION=

# Rate Limiting 활성화 여부
RATE_LIMIT_ENABLED=

# ------------------------------------------------------------------------------
# Rate Limiting 보안 설정 (IP 스푸핑 방지)
# ------------------------------------------------------------------------------
# 프록시 헤더 신뢰 여부
# - false (기본값, 권장): RemoteAddr만 사용, X-Forwarded-For 무시
#   → 로컬 개발, 테스트, 프록시 없는 환경에 적합
# - true: 신뢰할 수 있는 프록시 검증 후 X-Forwarded-For 사용
#   → 운영 환경 (Nginx, AWS ALB 등 프록시 뒤) 에 적합
RATE_LIMIT_TRUST_FORWARDED_HEADERS=

# 신뢰할 수 있는 프록시 IP 목록 (쉼표로 구분)
# 
# 로컬/개발 환경:
# RATE_LIMIT_TRUSTED_PROXIES=
#
# 운영 환경 (Nginx 프록시):
# RATE_LIMIT_TRUSTED_PROXIES=10.0.1.100
#
# 운영 환경 (AWS ALB + Nginx):
# RATE_LIMIT_TRUSTED_PROXIES=10.0.1.0/24,10.0.2.100
#
# 주의: trust-forwarded-headers=true 인 경우 반드시 설정 필요
RATE_LIMIT_TRUSTED_PROXIES=
